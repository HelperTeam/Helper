<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sign_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="注册"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="14dp"
        android:background="@color/colorMain"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_back"
        android:text="返回"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/colorMain"
        android:padding="10dp"
        android:layout_alignBottom="@+id/sign_title"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/sign_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="请输入手机号码"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="phone"
        android:layout_below="@+id/sign_title"/>
    <EditText
        android:id="@+id/sign_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="请输入验证码"
        android:inputType="number"
        android:layout_below="@+id/sign_phone"/>
    <Button
        android:id="@+id/sign_getCode"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="获取验证码"
        android:layout_below="@+id/sign_phone"
        android:layout_alignEnd="@+id/sign_code"/>
    <EditText
        android:id="@+id/sign_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="请输入不少于六位的密码"
        android:inputType="textPassword"
        android:layout_below="@+id/sign_code"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <Button
        android:id="@+id/sign_ok"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="26dp"
        android:text="注册"
        android:background="@drawable/shape"
        android:layout_below="@+id/sign_password"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
